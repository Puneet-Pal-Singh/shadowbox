{
  "extends": "@repo/typescript-config/base.json",
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "bundler",
    "lib": ["esnext"],
    "types": [
      "@cloudflare/workers-types",
      "@types/node"
    ],
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "worker-configuration.d.ts", 
    "src/**/*.ts",
    "src/**/*.d.ts"
  ],
  "exclude": ["node_modules", "test", "dist"]
}